<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="container header">
            <div class="row">
                <div class="col-md-6 logo">
                    <a href="">
                        <img src="~/img/logo.svg" alt="Інтернет-магазин Rozetka.ua - №1" />
                    </a>
                </div>
                <div class="col-md-6 main-menu">
                    <ul class="main-menu__list">
                        <li>
                            <a href="http://localhost:8080/Phone/List" class="main-menu__item">Phone</a>
                        </li>
                        <li>
                            <a href="http://localhost:8080/CPU/List" class="main-menu__item">CPU</a>
                        </li>
                        <li>
                            <a href="http://localhost:8080/GPU/List" class="main-menu__item">GPU</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container">
            @RenderBody()
        </div>
    </div>
    <script src="~/js/jquery-3.4.1.min.js"></script>
    @*<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>*@
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.11.2/js/bootstrap-select.min.js"></script>*@
    <script src="~/js/main.js"></script>
</body>
</html>
